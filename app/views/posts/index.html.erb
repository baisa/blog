
<div class="col-md-1">tutaj kolumna boczna</div>
<div class="col-md-8">

  <% @posts.each do |post| %>
    <div class="media">
        
      <a href="<%= post_path(post) %>" class="pull-left">
        <img class="media-object" src="http://tctechcrunch2011.files.wordpress.com/2014/03/mtv-emojis-diverse.jpg?w=208&h=156&crop=1" >
      </a>
     
      <div class="media-body">
        <h4 class="media-heading">
          <a href="<%= post_path(post) %>" class="">
            <%= post.title %>
          </a>
        </h4>

        <%= "#{post.text} " * 300 %>
      </div>
    
      <div class="form-group" role="form">
       
        <%=link_to 'Show', post_path(post), {class: 'btn btn-default'} %>
        <%=link_to 'Edit', edit_post_path(post), {class: 'btn btn-default'} %>
        <%= link_to 'New post', new_post_path, {class: 'btn btn-default'} %>
        <%= link_to 'Destroy', post_path(post),
                      method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      
  
    </div>
  <% end %>

</div>
<div class="col-md-3">tutaj kolumna boczna</div>